<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="700.0" spacing="10" style="-fx-padding: 16;" stylesheets="@magic.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="planner.ui.LoginController">

    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="9.0" prefWidth="668.0" style="-fx-padding: 40;" text="Login">
      <font>
         <Font name="Lucida Console" size="36.0" />
      </font></Label>

    <TextField fx:id="usernameField" prefHeight="28.0" prefWidth="668.0" promptText="Username">
      <font>
         <Font name="Lucida Console" size="20.0" />
      </font></TextField>
    <PasswordField fx:id="passwordField" prefWidth="668.0" promptText="Password">
      <font>
         <Font name="Lucida Console" size="20.0" />
      </font></PasswordField>
   <Hyperlink alignment="CENTER" onAction="#forgotPassword" text="Forgot password ?" />

    <Label fx:id="statusLabel" textFill="red" />
   <Button mnemonicParsing="false" onAction="#onRegister" prefHeight="36.0" prefWidth="90.0" text="Register" />

    <Button onAction="#onLogin" prefHeight="36.0" prefWidth="92.0" text="Login" />
</VBox>
