<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@magic.css" spacing="10" style="-fx-padding: 16;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="planner.ui.TasksController">

    <Label fx:id="userLabel" />
    <Button onAction="#onRefresh" text="Refresh" />

    <ListView fx:id="tasksList" VBox.vgrow="ALWAYS" />

    <Label fx:id="statusLabel" textFill="red" />
   <Button mnemonicParsing="false" onAction="#logOut" text="Log out" />
</VBox>
